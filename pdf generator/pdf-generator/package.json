{
  "name": "pdf-generator",
  "version": "1.0.0",
  "description": "PDF Generator Project",
  "main": "src/js/main.js",
  "scripts": {
    "generate-sprites": "node scripts/generate-sprites.js",
    "css:build": "postcss src/styles/*.css --dir dist/css --ext .min.css --map",
    "css:watch": "postcss src/styles/*.css --dir dist/css --ext .min.css --watch",
    "dev": "live-server",
    "start": "npm-run-all --parallel dev css:watch"
  },
  "devDependencies": {
    "svg-sprite": "^2.0.2",
    "svgo": "^3.0.2",
    "glob": "^10.3.10",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "cssnano": "^6.0.1",
    "autoprefixer": "^10.4.16",
    "postcss-import": "^15.1.0",
    "postcss-preset-env": "^9.3.0",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-custom-properties": "^13.3.2",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5"
  }
}